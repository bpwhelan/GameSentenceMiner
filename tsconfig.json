{
  "compilerOptions": {
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "node16",
    "target": "ESNext",
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "electron-src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node16",
    "resolveJsonModule": true
  },
  "include": ["electron-src/main/**/*", "electron-src/preload/**/*"]
}
